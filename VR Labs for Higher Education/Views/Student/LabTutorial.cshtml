@{
    Layout = "_Layout";
    ViewData["Title"] = "Acid Base Titration";
    var labId = ViewData["LabId"] as string;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8" />
    <title>Unity WebGL Player</title>
    <script src="/lib/jquery/dist/jquery.js"></script>
    <link rel="stylesheet" href="~/css/lab.css">
</head>
<body>
    <br />
    <div class="content">
        <!-- Video Player -->
        <video controls>
            <source src="@(Url.Content("~/" + labId + ".mp4"))" type="video/mp4">
        </video>
    </div>
    <button id="completeTutorialButton" type="button">Complete Tutorial</button>
    <script>
        $(document).ready(function () {
            $('#completeTutorialButton').click(function () {
                $.ajax({
                    url: '/Student/CompleteTutorial/' + "@(labId)",
                    type: 'POST',
                    success: function (data) {
                        // If the lab is completed successfully, redirect to the PlayLab page
                        alert('Tutorial completed successfully!');
                        window.location.href = '/Student/StudentLabPage/' + "@(labId)";
                    },
                    error: function (xhr, status, error) {
                        // Improved error handling for better diagnosis
                        var errorMessage = xhr.status + ': ' + xhr.statusText;
                        alert('An error occurred while completing the lab: ' + errorMessage);
                    }
                });
            });
        });
    </script>
</body>
</html>
